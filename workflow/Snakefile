# load packages
import pandas as pd
import re

# load samples
parameters = pd.read_table("data/parameters.tsv", sep="\t", dtype={"id": str}).set_index(["id"], drop=False)

# gather all images for training CNN
rule all:
	input:
		expand("data/images/slim_{id}.jpg", id=parameters.index.get_level_values("id"))

include: "rules/slim.smk"
include: "rules/create_image.smk"
